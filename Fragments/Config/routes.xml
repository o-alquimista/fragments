<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE xml>
<routing>
  <route>
    <id>login_get</id>
    <path>login</path>
    <controller>Fragments\Controllers\Login\Login</controller>
    <method>GET</method>
    <action>renderPage</action>
  </route>

  <route>
    <id>login_post</id>
    <path>login</path>
    <controller>Fragments\Controllers\Login\Login</controller>
    <method>POST</method>
    <action>startLogin</action>
  </route>

  <route>
    <id>register_get</id>
    <path>register</path>
    <controller>Fragments\Controllers\Register\Register</controller>
    <method>GET</method>
    <action>renderPage</action>
  </route>

  <route>
    <id>register_post</id>
    <path>register</path>
    <controller>Fragments\Controllers\Register\Register</controller>
    <method>POST</method>
    <action>startRegister</action>
  </route>

  <route>
    <id>index</id>
    <path></path>
    <controller>Fragments\Controllers\Root\Root</controller>
    <method>GET</method>
    <action>renderPage</action>
  </route>

  <route>
    <id>logout</id>
    <path>logout</path>
    <controller>Fragments\Controllers\Root\Root</controller>
    <method>GET</method>
    <action>logout</action>
  </route>

  <route>
    <id>public_profile</id>
    <path>profile/{alpha}</path>
    <controller>Fragments\Controllers\Profile\Profile</controller>
    <method>GET</method>
    <action>renderPage</action>
  </route>
</routing>
